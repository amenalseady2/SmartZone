<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/news_list_image"
            android:layout_margin="8dp"
            android:transitionName="@string/anime_news_badger"

            />

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_list_title"
                android:text="我是标题"
                android:textSize="14sp"
                android:maxLines="2"
                android:textColor="@color/title_text"
                />

            <TextView
                android:id="@+id/news_list_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_list_title"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="我是摘要"

                android:textColor="@color/subtitle_text"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/news_list_source"
                android:text="我是作者"
                android:textSize="10sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:textColor="@color/subtitle_text"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/news_list_time"
                android:text="我是发布时间"
                android:layout_gravity="right"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:textColor="@color/subtitle_text"
                />



        </RelativeLayout>



    </LinearLayout>




</android.support.v7.widget.CardView>

