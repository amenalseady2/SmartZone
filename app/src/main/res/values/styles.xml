<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="MainActivityColorTranslucentTheme" parent="@style/BaseAppTheme" />

    <style name="NewsActivityWithAnimation" parent="@style/BaseAppTheme" >
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/news_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/news_shared_return</item>
        <item name="android:windowEnterTransition">@transition/activity_enter</item>
        <item name="android:windowReturnTransition">@transition/activity_exit</item>

    </style>

    <style name="BookActivityWithAnimation" parent="@style/BaseAppTheme" >
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/book_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/book_shared_return</item>
        <item name="android:windowEnterTransition">@transition/activity_enter</item>
        <item name="android:windowReturnTransition">@transition/activity_exit</item>

    </style>

    <!--titlebar 标题-->
    <style name="ToolBar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--titlebar 副标题-->
    <style name="Toolbar.SubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">9.0sp</item>
        <item name="android:textColor">#99ffffff</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextAppearance">@style/ToolBar.Title</item>
        <item name="subtitleTextAppearance">@style/Toolbar.SubTitle</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:textSize">18sp</item> &lt;!&ndash;  搞掂字体大小&ndash;&gt;-->
    </style>

    <!--horizontalLine 水平分割线-->
    <style name="horizontalLine">
        <item name="android:background">@color/gray_80</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
